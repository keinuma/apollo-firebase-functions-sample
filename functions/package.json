{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .ts,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ext .ts --ignore-path .gitignore .",
    "build": "webpack",
    "serve": "npm run build && firebase serve --only functions",
